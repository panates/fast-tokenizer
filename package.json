{
  "name": "fast-tokenizer",
  "description": "A fast tokenizer/lexer for JavaScript",
  "version": "1.2.0",
  "author": "Panates",
  "license": "MIT",
  "contributors": [
    "Eray Hanoglu <e.hanoglu@panates.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/fast-tokenizer.git"
  },
  "keywords": [
    "tokinizer",
    "lexer",
    "split",
    "string"
  ],
  "type": "module",
  "types": "esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    },
    "./cjs": "./cjs/index.js",
    "./esm": "./esm/index.js"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.28.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.3.1",
    "ts-cleanup": "^0.2.6",
    "ts-jest": "^29.0.4",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "cjs/",
    "esm/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "compile": "tsc -b tsconfig.json",
    "lint": "eslint --no-error-on-unmatched-pattern",
    "clean": "npm run clean:src && npm run clean:dist",
    "clean:dist": "rimraf cjs esm coverage",
    "clean:src": "ts-cleanup -s src --all | ts-cleanup -s test",
    "prebuild": "npm run clean:dist && npm run lint",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "cp package.cjs.json ./cjs/package.json",
    "test": "jest",
    "cover": "rimraf coverage",
    "precover": "jest --maxWorkers=1 --coverage",
    "precitest": "rimraf coverage",
    "citest": "jest --coverage --coverageReporters=lcov"
  }
}
